{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'python3 ~/.claude/hooks/nudge-commit-skill.py'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Bash(git add -A*)",
      "Bash(git add . *)",
      "Bash(git add .)",
      "Bash(git commit --no-verify*)",
      "Bash(git commit -n *)",
      "Bash(git push --force*)",
      "Bash(git push -f *)",
      "Bash(git reset --hard*)",
      "Bash(git checkout .)",
      "Bash(git restore .)",
      "Bash(git clean -f*)"
    ]
  }
}
